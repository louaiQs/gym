{
  "name": "gym-manager",
  "private": true,
  "version": "1.0.0",
  "type": "commonjs",
  "main": "dist-electron/main.js",
  "homepage": "./",
  "description": "A modern gym management application",
  "author": "Louai Amara <amaramohamedlouai@gmail.com>",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "electron": "wait-on tcp:5173 && cross-env NODE_ENV=development electron .",
    "electron:dev": "concurrently \"npm run dev\" \"npm run electron\"",
    "electron:pack": "npm run build && electron-builder",
    "electron:dist": "npm run build && electron-builder --publish=never",
    "electron:build": "npm run build && npm run build:electron",
    "build:electron": "tsc --project electron.tsconfig.json",
    "postinstall": "electron-builder install-app-deps",
    "pack": "npm run build && npm run build:electron && electron-builder --dir",
    "dist": "npm run build && npm run build:electron && electron-builder",
    "dist:mac": "npm run build && npm run build:electron && electron-builder --mac",
    "dist:win": "npm run build && npm run build:electron && electron-builder --win",
    "dist:linux": "npm run build && npm run build:electron && electron-builder --linux"
  },
  "dependencies": {
    "framer-motion": "^12.16.0",
    "lucide-react": "^0.344.0",
    "react": "^18.3.1",
    "react-datepicker": "^8.4.0",
    "react-dom": "^18.3.1",
    "sql.js": "^1.13.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.3",
    "vite": "^5.4.2",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.yourcompany.gym-manager",
    "productName": "Gym Manager",
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.business",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
